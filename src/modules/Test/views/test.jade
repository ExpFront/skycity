div.page-test(class='container' ng-switch='Test.postStatus')
	span.success-message(ng-switch-when='created')
		| Ваш тест был успешно создан
	div(class='row text-center' ng-switch-when='creating')
		h1.header Создайте тест
		form.form(
			name='test'
			class='col-xs-offset-2 col-xs-8'
		)
			ul.questions
				li.question
					input(
						type='text'
						class='form-control'
						ng-model='Test.test.questions[0].title'
						placeholder='Введите первый вопрос:'
					)
					ul
						li.answer
							input.radio(
								type='radio'
								value='1'
								ng-model='Test.test.questions[0].correct_answer'
							)
							input(
								type='text'
								class='form-control'
								ng-model='Test.test.questions[0].answers.answer_one'
								placeholder='Введите первый ответ:'
							)
						li.answer
							input.radio(
								type='radio'
								value='2'
								ng-model='Test.test.questions[0].correct_answer'
							)
							input(
								type='text'
								class='form-control'
